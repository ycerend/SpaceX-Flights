<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    

                 
                              
                                                                 
           

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B2FFFFFF"
        android:fillViewport="true"
        tools:ignore="RtlHardcoded" android:tag="layout/single_launch_display_fragment_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/launch_topic"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:tag="binding_1"                                                                />

            <TextView
                android:id="@+id/launch_time"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:background="#81E4C9C8"
                android:tag="binding_2"                                 
                android:textIsSelectable="true" />
            <TextView
                android:id="@+id/launch_details"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:background="#81E4C9C8"
                android:tag="binding_3"              
                android:textIsSelectable="true" />
            <TextView
                android:id="@+id/launch_links_wiki"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:tag="binding_4"                      />

            <TextView
                android:id="@+id/launch_links_article"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:tag="binding_5"                     
                android:textIsSelectable="true"/>


        </LinearLayout>
    </ScrollView>


         